<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.steammanager.tables.mapper.TablesMapper">
	    <insert id="add" parameterType="Tables" >
	        insert into category_ ( name ) values (#{name})    
	    </insert>
	    
	    <delete id="delete" parameterType="Tables" >
	        delete from category_ where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="Tables">
	        select * from   category_  where id= #{id}    
	    </select>

	    <update id="update" parameterType="Tables" >
	        update category_ set name=#{name} where id=#{id}    
	    </update>
	    <select id="list" resultType="Tables">
	        select * from   category_      
	    </select>	    
	</mapper>

